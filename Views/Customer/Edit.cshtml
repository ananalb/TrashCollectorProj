@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "Edit";
}

<h1>Suspend</h1>

<h4>Please choose a Start Date and an End Date to temporarily suspend service.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">                      
            <div class="form-group">
                <label asp-for="StartSuspensionDay" class="control-label">StartSuspensionDay</label>
                <input asp-for="StartSuspensionDay" class="form-control" />
                <span asp-validation-for="StartSuspensionDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndSuspensionDay" class="control-label">EndSuspensionDay</label>
                <input asp-for="EndSuspensionDay" class="form-control" />
                <span asp-validation-for="EndSuspensionDay" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
